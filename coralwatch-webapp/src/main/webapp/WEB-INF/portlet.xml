<?xml version="1.0"?>

<portlet-app xmlns="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd" version="2.0"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd http://java.sun.com/xml/ns/portlet/portlet-app_2_0.xsd">
    <portlet>
        <portlet-name>registration-portlet</portlet-name>
        <display-name>Registration Portlet</display-name>
        <portlet-class>org.coralwatch.portlets.RegistrationPortlet</portlet-class>
        <init-param>
            <name>registration-jsp</name>
            <value>/user-management/registration.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <portlet-info>
            <title>CoralWatch Registration Portlet</title>
            <short-title>Registration</short-title>
            <keywords>registration</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
    <portlet>
        <portlet-name>login-portlet</portlet-name>
        <display-name>CoralWatch Login</display-name>
        <portlet-class>org.coralwatch.portlets.LoginPortlet</portlet-class>
        <init-param>
            <name>login-jsp</name>
            <value>/user-management/login.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <portlet-info>
            <title>CoralWatch Login</title>
            <short-title>Login</short-title>
            <keywords>Login</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
    <portlet>
        <portlet-name>map-portlet</portlet-name>
        <display-name>CoralWatch Map</display-name>
        <portlet-class>org.coralwatch.portlets.MapPortlet</portlet-class>
        <init-param>
            <name>map-jsp</name>
            <value>/map/map.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <portlet-info>
            <title>CoralWatch Map</title>
            <short-title>Map</short-title>
            <keywords>Map</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>

    <portlet>
        <portlet-name>kitrequest-portlet</portlet-name>
        <display-name>Kit Request</display-name>
        <portlet-class>org.coralwatch.portlets.KitRequestPortlet</portlet-class>
        <init-param>
            <name>kitrequest-jsp</name>
            <value>/data/kit-request/kitrequest.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <portlet-info>
            <title>CoralWatch Kit Request</title>
            <short-title>Kit Request</short-title>
            <keywords>Kit Request</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
    <portlet>
        <portlet-name>members-portlet</portlet-name>
        <display-name>Members List</display-name>
        <portlet-class>org.coralwatch.portlets.MembersPortlet</portlet-class>
        <init-param>
            <name>members-jsp</name>
            <value>/user-management/members.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <portlet-info>
            <title>CoralWatch Members List</title>
            <short-title>Members List</short-title>
            <keywords>Members</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>

    <portlet>
        <portlet-name>stats-portlet</portlet-name>
        <display-name>Stats Updates</display-name>
        <portlet-class>org.coralwatch.portlets.StatsUpdatePortlet</portlet-class>
        <init-param>
            <name>stats-jsp</name>
            <value>/data/news/stats.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <portlet-info>
            <title>CoralWatch Stats Update</title>
            <short-title>Stats Update</short-title>
            <keywords>Stats</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>

    <portlet>
        <portlet-name>survey-portlet</portlet-name>
        <display-name>CoralWatch Survey</display-name>
        <portlet-class>org.coralwatch.portlets.SurveyPortlet</portlet-class>
        <init-param>
            <name>survey-jsp</name>
            <value>/data/survey/survey.jsp</value>
        </init-param>
        <expiration-cache>0</expiration-cache>
        <supports>
            <mime-type>text/html</mime-type>
        </supports>
        <portlet-info>
            <title>CoralWatch Survey</title>
            <short-title>Survey</short-title>
            <keywords>Survey</keywords>
        </portlet-info>
        <security-role-ref>
            <role-name>administrator</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>guest</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>power-user</role-name>
        </security-role-ref>
        <security-role-ref>
            <role-name>user</role-name>
        </security-role-ref>
    </portlet>
</portlet-app>